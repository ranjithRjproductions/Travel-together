
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user is an admin.
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // USERS
    // Any authenticated user can read public user profiles, which is necessary for guide matching.
    // A user can only create their own document and can only update specific, safe fields.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['name', 'photoURL', 'photoAlt', 'gender', 'address', 'contact', 'disability', 'fcmTokens']);
      allow delete: if request.auth != null && isAdmin();
    }
    
    // GUIDE PROFILE (Subcollection of users)
    // Anyone can read a guide's professional profile to make booking decisions.
    // Only the guide themselves or an admin can write to their own profile.
    match /users/{userId}/guideProfile/{guideProfileId} {
       allow read: if true;
       allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // TRAVEL REQUESTS
    match /travelRequests/{requestId} {
      // Allow a user to create a draft request for themselves with a limited set of fields.
      allow create: if request.auth != null && 
        request.resource.data.travelerId == request.auth.uid &&
        request.resource.data.keys().hasOnly(['travelerId', 'status', 'createdAt', 'step1Complete', 'step2Complete', 'step3Complete', 'step4Complete']);

      // Allow read/delete if the user is the traveler, the assigned guide, or an admin.
      allow read, delete: if request.auth != null && 
        (
          (resource.data.travelerId is string && resource.data.travelerId == request.auth.uid) ||
          (resource.data.guideId is string && resource.data.guideId == request.auth.uid) ||
          isAdmin()
        );
        
      // Granular update rules for the travel request lifecycle.
      allow update: if request.auth != null && (
        // Case 1: Traveler is updating a draft before submission.
        (
          resource.data.travelerId == request.auth.uid &&
          resource.data.status == 'draft' &&
          request.resource.data.diff(resource.data).affectedKeys()
             .hasOnly([
                'purposeData', 'requestedDate', 'startTime', 'endTime', 
                'travelMediumData', 'pickupData', 'travelerData', 'estimatedCost', 'submittedAt', 'status', 'guideId', 'guideData',
                'step1Complete', 'step2Complete', 'step3Complete', 'step4Complete'
             ])
        ) ||
        // Case 2: Traveler submits the request (draft -> pending) or selects a guide (server action).
        (
          resource.data.travelerId == request.auth.uid &&
          (resource.data.status == 'draft' || resource.data.status == 'pending') &&
          // This rule is intentionally broad for server-side updates (submitTravelRequest action).
          // It relies on the server action being the trusted party to set fields like guideId, cost, and status.
          true 
        ) ||
        // Case 3: Guide is accepting or declining the request.
        (
          resource.data.guideId == request.auth.uid &&
          resource.data.status == 'guide-selected' &&
          (
            // Guide accepts
            (
              request.resource.data.status == 'confirmed' &&
              request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'acceptedAt'])
            ) ||
            // Guide declines
            (
              request.resource.data.status == 'pending' &&
              !('guideId' in request.resource.data) &&
              request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'guideId', 'guideData'])
            )
          )
        ) ||
        // Case 4: Server action is creating the Razorpay order.
        (
           resource.data.travelerId == request.auth.uid &&
           resource.data.status == 'confirmed' &&
           request.resource.data.status == 'payment-pending'
        ) ||
         // Case 5: Server action is verifying the payment via webhook-triggered cloud function.
        (
          resource.data.status == 'payment-pending' &&
          request.resource.data.status == 'confirmed' &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'paidAt', 'tripPin', 'paymentDetails'])
        )
      );
    }
    
    // ADMIN ROLES (Read-only for clients)
    // This collection is managed server-side. Admins can read it to verify privileges,
    // but no client can write to it, preventing privilege escalation.
    match /roles_admin/{userId} {
      allow get, list: if isAdmin();
      allow write: if false;
    }

    // PAYMENT EVENTS (Write-only for server, no client access)
    // The webhook writes here, and the cloud function reads. Clients should not have access.
    match /payment_events/{eventId} {
      allow read, write: if false;
    }
  }
}
