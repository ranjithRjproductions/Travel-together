rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // TRAVEL REQUESTS
    // A user can create a request if they are authenticated.
    // They can read, update, or delete a request if the document's travelerId
    // matches their own user ID. The read rule also checks the incoming request
    // to allow reads during the creation process before the data is saved.
    match /travelRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.travelerId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.travelerId == request.auth.uid;
    }

    // --- ADMIN ROLES (Read-only for clients) ---
    // This collection is managed server-side. Admins can read it to verify privileges,
    // but no client can write to it, preventing privilege escalation.
    match /roles_admin/{userId} {
      allow get, list: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      allow write: if false;
    }
  }
}
