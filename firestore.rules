
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user is an admin.
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // USERS
    // A user can read their own document. Admins can read any user document.
    // List is allowed for any authenticated user, which is required to query for guides.
    // The 'read' rule above still prevents non-admins from reading full user documents.
    // Create is allowed for the user themselves.
    // Updates are restricted to only safe, user-editable fields to prevent privilege escalation.
    // Deletion is restricted to admins only to prevent data loss.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['name', 'photoURL', 'photoAlt', 'gender', 'address', 'contact', 'disability', 'fcmTokens']);
      allow delete: if request.auth != null && isAdmin();
    }
    
    // GUIDE PROFILE (Subcollection of users)
    // Anyone can read a guide's professional profile to make booking decisions.
    // Only the guide themselves can write to their own profile.
    match /users/{userId}/guideProfile/{guideProfileId} {
       allow read: if true;
       allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // TRAVEL REQUESTS
    match /travelRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.travelerId == request.auth.uid;
      
      allow read, delete: if request.auth != null && 
        (
          (resource.data.travelerId is string && resource.data.travelerId == request.auth.uid) ||
          (resource.data.guideId is string && resource.data.guideId == request.auth.uid) ||
          isAdmin()
        );
        
      allow update: if request.auth != null && (
        // Case 1: Traveler is updating a draft before submission
        (
          resource.data.travelerId == request.auth.uid &&
          resource.data.status == 'draft' &&
          request.resource.data.diff(resource.data).affectedKeys()
             .hasOnly([
                'purposeData', 'requestedDate', 'startTime', 'endTime', 
                'travelMediumData', 'pickupData', 'travelerData',
                'step1Complete', 'step2Complete', 'step3Complete', 'step4Complete'
             ])
        ) ||
        // Case 2: Traveler submits the request (draft -> pending) or selects a guide
        (
          resource.data.travelerId == request.auth.uid &&
          (resource.data.status == 'draft' || resource.data.status == 'pending') &&
          // This covers the server action updating the status, cost, guideId, etc.
          // It's intentionally open because the server action is trusted.
          true 
        ) ||
        // Case 3: Guide is accepting or declining the request.
        (
          resource.data.guideId == request.auth.uid &&
          resource.data.status == 'guide-selected' &&
          (
            // Guide accepts
            (
              request.resource.data.status == 'confirmed' &&
              request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'acceptedAt'])
            ) ||
            // Guide declines
            (
              request.resource.data.status == 'pending' &&
              !('guideId' in request.resource.data) &&
              request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'guideId', 'guideData'])
            )
          )
        ) ||
        // Case 4: Server action is creating the Razorpay order
        (
           resource.data.travelerId == request.auth.uid &&
           resource.data.status == 'confirmed' &&
           request.resource.data.status == 'payment-pending'
        ) ||
         // Case 5: Server action is verifying the payment
        (
          resource.data.travelerId == request.auth.uid &&
          resource.data.status == 'payment-pending' &&
          request.resource.data.status == 'paid' &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'paidAt', 'paymentDetails'])
        )
      );
    }
    
    // ADMIN ROLES (Read-only for clients)
    // This collection is managed server-side. Admins can read it to verify privileges,
    // but no client can write to it, preventing privilege escalation.
    match /roles_admin/{userId} {
      allow get, list: if isAdmin();
      allow write: if false;
    }
  }
}
