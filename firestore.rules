
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user is an admin.
    // It checks for the existence of a document with the user's UID in the roles_admin collection.
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // USERS
    // A user can read and write to their own user document.
    // Admins can read any user document.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // GUIDE PROFILE (Subcollection of users)
    // Only the owner of the user profile can read/write their guide sub-profile.
    // Admins can also read any guide profile.
    match /users/{userId}/guideProfile/{guideProfileId} {
       allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // TRAVEL REQUESTS
    // A user can create a request if they are authenticated.
    // A user can read, update, or delete their own requests.
    // An admin can also read or delete any request.
    match /travelRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.travelerId == request.auth.uid;
      allow read, delete: if request.auth != null && (resource.data.travelerId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && resource.data.travelerId == request.auth.uid; // Only traveler can update
    }

    // --- ADMIN ROLES (Read-only for clients) ---
    // This collection is managed server-side. Admins can read it to verify privileges,
    // but no client can write to it, preventing privilege escalation.
    match /roles_admin/{userId} {
      allow get, list: if isAdmin();
      allow write: if false;
    }
  }
}
