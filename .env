
# Required for Firebase Admin SDK (Server-Side)
# This replaces the single FIREBASE_SERVICE_ACCOUNT_KEY
# Ensure the private key is wrapped in quotes if it contains special characters.
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
...your-private-key...
-----END PRIVATE KEY-----
"

# Required for Firebase Client SDK (Browser) - Already in firebase/config.ts but good practice
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""

# Required for Push Notifications
NEXT_PUBLIC_VAPID_KEY=your-public-vapid-key

# Required for Payment Gateway
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=""

# Required for Email Notifications
SENDGRID_API_KEY=your-sendgrid-api-key
RAZORPAY_KEY_ID=your-razorpay-key-id