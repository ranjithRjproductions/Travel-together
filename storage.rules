rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile Photos: Publicly readable, owner can write.
    match /profile-photos/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Disability IDs: Private to the owner.
    match /disability-ids/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Guide Address Proofs: Private to the owner.
    match /guide-address-proofs/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Guide Verification Docs: Private to the owner.
    match /guide-verification-docs/{userId}/{path=**}/{fileName} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
