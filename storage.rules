rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match the directory for a specific user's profile photos.
    // The {fileName} wildcard captures the file being uploaded.
    match /profile-photos/{userId}/{fileName} {
      
      // Allow anyone to read the profile photos. This is necessary
      // so the images can be displayed publicly in the app's UI.
      allow read: if true;

      // Allow write (create, update, delete) operations only if the
      // user is authenticated and their UID matches the {userId} in the path.
      // This ensures users can only upload to their own folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
