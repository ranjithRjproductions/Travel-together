rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to their own profile photo directory.
    // The recursive wildcard {allPaths=**} ensures that any file within the
    // user's folder is covered by this rule.
    match /profile-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
